/* Given a number N, print sum of all even numbers from 1 to N. */

import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int sum=0;
		int i =2;
		while(i<=n){
			
			sum+=i;
			i+=2;
		
		}
		System.out.println(sum);
		
		
	}

}
